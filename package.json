{
  "name": "tech-challenge-restaurante",
  "version": "0.0.1",
  "description": "Api responsável por gerenciar a aplicação do Restaurente Tech Challenge ",
  "license": "GPL-3.0-or-later",
  "keywords": [
    "Ports and Adapters",
    "clean code",
    "ddd",
    "solid",
    "design patterns",
    "node",
    "typescript",
    "jest",
    "typeorm"
  ],
  "author": {
    "name": "Mauricio Carvalho Pinheiro",
    "email": "developer.mauricio1@gmail.com"
  },
  "scripts": {
    "start:message-broker": "node -r dotenv/config dist/main/message-broker.js",
    "dev:message-broker": "ts-node-dev --respawn --transpile-only --clear -r dotenv/config --inspect=0.0.0.0:9229 src/main/message-broker",
    "start:server": "node -r dotenv/config dist/main/server.js",
    "dev:server": "npm run docs && ts-node-dev --respawn --transpile-only --clear -r dotenv/config --inspect=0.0.0.0:9229 src/main/server",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run docs && tsc -p tsconfig-build.json",
    "build:test": "npm run clean && tsc -p tsconfig-build.json",
    "prepare": "husky install",
    "check": "npm-check -s -u",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "npm t -- --watch",
    "test:staged": "npm t -- --findRelatedTests",
    "test:coverage": "npm t -- --coverage",
    "test:integration": "npm t -- --config ./jest.integration.config.js",
    "test:coveralls": "npm run test:coverage && coveralls < coverage/lcov.info",
    "test:k6": "node ./tests/stress.js",
    "docs": "npm run tsoa:routes && npm run tsoa:swagger",
    "tsoa:routes": "tsoa routes",
    "tsoa:swagger": "tsoa swagger",
    "typeorm:migrate": "typeorm migration:run",
    "test:unit": "npm t -- --watch ./tests/application/middlewares/authentication.spec.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/amqplib": "^0.10.5",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.12.8",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.2.0"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "@jest-mock/express": "^2.1.0",
    "@types/k6": "^0.48.0",
    "@types/mongodb": "^4.0.7",
    "amqplib": "^0.10.4",
    "bcrypt": "^5.1.1",
    "brazilian-class-validator": "^0.1.6",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "jest-mock-extended": "^4.0.0-beta1",
    "jsonwebtoken": "^9.0.2",
    "k6": "^0.0.0",
    "lint-staged": "^15.2.9",
    "module-alias": "^2.2.3",
    "mongodb": "^5.9.2",
    "mysql2": "^3.7.0",
    "reflect-metadata": "^0.2.1",
    "rimraf": "^5.0.5",
    "swagger-ui-express": "^4.1.6",
    "tsoa": "^4.1.3",
    "typeorm": "^0.3.19",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  }
}
